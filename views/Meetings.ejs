<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/Meetings-style.css" />
    <title>Meeting Details</title>
</head>
<body>

<header class="header">
    <div class="container-header">          
        <div class="brand">
            <a href="index.html" class="image"></a>
        </div>
    </div>
</header>
   
<div class="container-fluid-main">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h2> History</h2>
                </div>
                <ul class="list-group" id="appointments-list">
                    <% appointments.forEach(appointment => { %>
                        <li class="list-group-item">
                            <div class="meeting-data">
                                <!-- Wyświetlamy datę i typ spotkania -->
                                <p><span class="type"> Date: </span><%= appointment.date %></p>
                                <p><span class="type"> Type: </span><%= appointment.type %></p>
                                <p><span class="type"> Doctor: </span><%= appointment.doctor_name %></p>
                                <p><span class="type"> Price: </span><%= appointment.price %></p>

                                <!-- Wyświetlamy status i status płatności -->
                                <p><span class="type"> Status: </span><span class="status"><%= appointment.status %></span></p>
                                <p><span class="type"> Payment Status: </span><span class="payment-status"><%= appointment.paymentStatus %></span></p>
                            </div>
                            <div class="btn-container">
                                <!-- Przycisk do wyświetlenia szczegółów -->
                                <% if (appointment.paymentStatus === 'Paid') { %>
                                <button class="extend-info-button" data-category="<%= appointment.id %>"> Details</button>
                                <% } %>

                                <!-- Przycisk do opłacenia spotkania -->
                                <% if (appointment.paymentStatus === 'Not Paid') { %>
                                <button class="btn btn-success pay-button" data-id="<%= appointment.id %>">Pay</button>
                                <% } %>

                                <!-- Przycisk do anulowania spotkania -->
                                <% if (appointment.status !== 'Ended') { %>
                                <button class="btn btn-danger cancel-button" data-id="<%= appointment.id %>">Cancel</button>
                                <% } %>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>

        <!-- tutaj kontener do płacenia płatnosci i potem details-->
        <div class="col-md-8">
            <div class="card-extended">

            </div>
        </div>

    </div>
</div>

<script src="../js/Meetings.js"></script>
</body>
</html>
