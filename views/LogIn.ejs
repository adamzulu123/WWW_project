<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/LogIN.css"/>
    <title>Login Form</title>
</head>
<body>
    <header class="header">
        <div class="container-header">
            <div class="brand">
                <a href="index.html" class="image"></a>
            </div>
        </div>
    </header>


    <% if (typeof logoutDeleteInfo !== 'undefined' && logoutDeleteInfo) { %>
        <div class="alert alert-<%= messageType %>" role="alert" id="logoutDeleteInfo">
            <%= logoutDeleteInfo %>
        </div>
    <% } %>

    <div class="container-fluid" id="container">
        <div class="sign-up">
            <form action="/register" method="POST">
                <h1>Sign up</h1>

                <% if (typeof registerError !== 'undefined' && registerError) { %>
                <div class="error" id="errorRegister">
                    <%= registerError %>
                </div>
                <% } %>
                    
                <input type="text" name="first_name" placeholder="Name" required>
                <input type="text" name="last_name" placeholder="Surname" required>
                <input type="text" name="age" placeholder="Age" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <div class="option-dots">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="account_type" value="User" id="UserAccount">
                        <label class="form-check-label" for="UserAccount">User</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="account_type" value="Specialist" id="SpecialistAccount" checked>
                        <label class="form-check-label" for="SpecialistAccount">Specialist</label>
                    </div>
                </div>
                <button type="submit">Sign Up</button>
                <div class="error" id="errorRegister"></div>
            </form>
        </div>
        <div class="sign-in">
            <form action="/login" method="POST">
                <h1>Sign in</h1>

                <% if (typeof loginError !== 'undefined' && loginError) { %>
                <div class="error" id="errorLogin">
                    <%= loginError %>
                </div>
                <% } %>
                
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <div class="forget-password">
                    <a href="#">Forget Your Password?</a>
                </div>
                <div class="option-dots">
                    <div class="form-check">
                        <input class="form-check-input" name="account_type" type="radio" value="User" id="UserAccount">
                        <label class="form-check-label" for="UserAccount">User</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" name="account_type" type="radio" value="Specialist" id="SpecialistAccount" checked>
                        <label class="form-check-label" for="SpecialistAccount">Specialist</label>
                    </div>
                </div>
                <button type="submit">Log In</button>
                
            </form>
        </div>
        <div class="switch-container">
            <div class="switch">
                <div class="switch-left">
                    <h1>Welcome back</h1>
                    <p>Already have an account?</p>
                    <button id="login">Log In</button>
                </div>
                <div class="switch-right">
                    <h1>Welcome!</h1>
                    <p>Here for the first time?</p>
                    <button id="register">Sign up</button>
                </div>
            </div>
        </div>
        <script src="../js/LogIn.js"></script>
    </div>
    <div class="back-main-page">
        <a href="index.html" class="btn btn-link">
            <i class="bi bi-box-arrow-in-left"></i> Back
        </a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
